<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_moyenne2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/artifices"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".SuccessActivity">

    <TextView
        android:id="@+id/resultatReuMoy"
        android:layout_width="312dp"
        android:layout_height="95dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="323dp"
        android:layout_marginEnd="18dp"
        android:layout_marginRight="18dp"
        android:background="#1AC6D2DD"
        android:text="TextView"
        android:textColor="#84D4DC"
        android:textSize="22sp"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/Back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="RetournerHome"
        android:text="Home" />

    <Button
        android:id="@+id/buttonSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="86dp"
        android:onClick="SendSMS"
        android:text="Envoyer par SMS" />
</RelativeLayout>
